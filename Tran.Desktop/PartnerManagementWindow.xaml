<Window x:Class="Tran.Desktop.PartnerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="거래처 관리 - Tran" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- DataGrid Row 스타일 -->
        <Style x:Key="CompanyRowStyle" TargetType="DataGridRow">
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <!-- 활성 거래처 -->
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="BorderBrush" Value="#1E7F34"/>
                    <Setter Property="Background" Value="White"/>
                </DataTrigger>
                <!-- 비활성 거래처 -->
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="Foreground" Value="#868E96"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 버튼 기본 스타일 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#95A5A6"/>
        </Style>

        <Style x:Key="DestructiveButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E67700"/>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#27AE60"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="거래처 관리"
                              Foreground="White"
                              FontSize="20"
                              FontWeight="Bold"/>
                    <TextBlock Text="거래처 정보를 등록하고 관리합니다"
                              Foreground="#E8E8E8"
                              FontSize="13"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 상태 표시 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="활성 거래처: " Foreground="#E8E8E8" FontSize="13"/>
                    <TextBlock x:Name="ActiveCountText" Text="0" Foreground="White" FontWeight="Bold" FontSize="13"/>
                    <TextBlock Text=" / 전체: " Foreground="#E8E8E8" FontSize="13" Margin="10,0,0,0"/>
                    <TextBlock x:Name="TotalCountText" Text="0" Foreground="White" FontWeight="Bold" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 검색 필터 영역 -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="20,15" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="검색:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" x:Name="SearchTextBox" Padding="8" Height="35" VerticalContentAlignment="Center"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                <CheckBox Grid.Column="2" x:Name="ShowInactiveCheckBox"
                          Content="비활성 거래처 포함"
                          IsChecked="{Binding ShowInactiveCompanies}"
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"
                          FontSize="13"/>

                <Button Grid.Column="3" Content="검색" Style="{StaticResource PrimaryButton}"
                        Command="{Binding SearchCommand}"/>
            </Grid>
        </Border>

        <!-- 거래처 목록 (DataGrid) -->
        <DataGrid Grid.Row="2" x:Name="CompaniesDataGrid"
                  ItemsSource="{Binding Companies}"
                  SelectedItem="{Binding SelectedCompany}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderThickness="0"
                  Margin="10"
                  RowStyle="{StaticResource CompanyRowStyle}">

            <DataGrid.Columns>
                <!-- 상태 Pill -->
                <DataGridTemplateColumn Header="상태" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="6" Padding="10,4" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Background" Value="#E6F4EA"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Text" Value="활성"/>
                                                    <Setter Property="Foreground" Value="#1E7F34"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Text" Value="비활성"/>
                                                    <Setter Property="Foreground" Value="#868E96"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 거래처명 -->
                <DataGridTextColumn Header="거래처명" Binding="{Binding CompanyName}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 사업자번호 -->
                <DataGridTextColumn Header="사업자번호" Binding="{Binding BusinessNumber}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 대표자 -->
                <DataGridTextColumn Header="대표자" Binding="{Binding Representative}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 연락처 -->
                <DataGridTextColumn Header="연락처" Binding="{Binding Contact}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 주소 -->
                <DataGridTextColumn Header="주소" Binding="{Binding Address}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 등록일 -->
                <DataGridTextColumn Header="등록일" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="110">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="Foreground" Value="#6C757D"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 버튼 영역 -->
        <Border Grid.Row="3" Background="#ECF0F1" Padding="20,15" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 좌측 버튼 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="추가" Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddCompanyCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="수정" Style="{StaticResource PrimaryButton}"
                            Command="{Binding EditCompanyCommand}"
                            Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="거래처를 선택한 후 수정할 수 있습니다"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="비활성화" Style="{StaticResource DestructiveButton}"
                            Command="{Binding DeactivateCompanyCommand}"
                            Margin="0,0,10,0">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="비활성화된 거래처는 새 문서 작성 시 선택할 수 없습니다"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="재활성화" Style="{StaticResource SuccessButton}"
                            Command="{Binding ReactivateCompanyCommand}">
                        <Button.ToolTip>
                            <ToolTip>
                                <TextBlock Text="비활성화된 거래처를 다시 활성화합니다"/>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>

                <!-- 우측 버튼 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="새로고침" Style="{StaticResource SecondaryButton}"
                            Command="{Binding LoadCompaniesCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="닫기" Style="{StaticResource SecondaryButton}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
