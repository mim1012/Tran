<Window x:Class="Tran.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tran.Desktop"
        mc:Ignorable="d"
        Title="Tran - 거래명세표 관리" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 상태바 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Tran 거래명세표 시스템"
                          Foreground="White" FontSize="16" FontWeight="Bold"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="연결 상태: 정상" Foreground="#E8E8E8" Margin="0,0,20,0"
                              VerticalAlignment="Center" FontSize="13"/>
                    <TextBlock Text="|" Foreground="#6C757D" Margin="0,0,20,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="사용자 권한: 관리자" Foreground="#E8E8E8"
                              VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 콘텐츠 영역 (사이드바 + 작업 영역) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 좌측 사이드바 -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- 사이드바 메뉴 항목들 -->
                    <Button Content="거래명세표"
                           Background="#E8F1FF"
                           Foreground="#1E5EFF"
                           BorderThickness="0,0,3,0"
                           BorderBrush="#1E5EFF"
                           Padding="15"
                           HorizontalContentAlignment="Left"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Cursor="Hand"/>

                    <Button Content="거래처 관리"
                           Background="Transparent"
                           Foreground="#495057"
                           BorderThickness="0"
                           Padding="15"
                           HorizontalContentAlignment="Left"
                           FontSize="14"
                           Cursor="Hand"
                           Margin="0,1,0,0"/>

                    <Button Content="정산 관리"
                           Background="Transparent"
                           Foreground="#495057"
                           BorderThickness="0"
                           Padding="15"
                           HorizontalContentAlignment="Left"
                           FontSize="14"
                           Cursor="Hand"
                           Margin="0,1,0,0"/>

                    <Button Content="로그 및 이력"
                           Background="Transparent"
                           Foreground="#495057"
                           BorderThickness="0"
                           Padding="15"
                           HorizontalContentAlignment="Left"
                           FontSize="14"
                           Cursor="Hand"
                           Margin="0,1,0,0"/>

                    <Button Content="설정"
                           Background="Transparent"
                           Foreground="#495057"
                           BorderThickness="0"
                           Padding="15"
                           HorizontalContentAlignment="Left"
                           FontSize="14"
                           Cursor="Hand"
                           Margin="0,1,0,0"/>
                </StackPanel>
            </Border>

            <!-- 우측 메인 작업 영역 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 검색 필터 영역 -->
                <Border Grid.Row="0" Background="#ECF0F1" Padding="15" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="문서번호:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Name="SearchBox" Padding="5" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" Text="상태:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="3" Name="StateFilterComboBox" Padding="5" Margin="0,0,20,0">
                    <ComboBoxItem Content="전체" IsSelected="True"/>
                    <ComboBoxItem Content="작성중"/>
                    <ComboBoxItem Content="전송됨"/>
                    <ComboBoxItem Content="수신됨"/>
                    <ComboBoxItem Content="확정됨"/>
                </ComboBox>

                <Button Grid.Column="5" Content="검색" Padding="15,5"
                       Background="#3498DB" Foreground="White" BorderThickness="0"
                       Cursor="Hand"/>
            </Grid>
                </Border>

                <!-- 거래명세표 목록 (DataGrid) -->
                <DataGrid Grid.Row="1" Name="DocumentsDataGrid"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 GridLinesVisibility="None"
                 HeadersVisibility="Column"
                 Background="White"
                 RowHeight="45"
                 BorderThickness="0"
                 Margin="10">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Style.Triggers>
                                <!-- 전송됨 상태 -->
                                <DataTrigger Binding="{Binding State}" Value="1">
                                    <Setter Property="BorderBrush" Value="#1E5EFF"/>
                                </DataTrigger>
                                <!-- 확정됨 상태 -->
                                <DataTrigger Binding="{Binding State}" Value="4">
                                    <Setter Property="BorderBrush" Value="#1E7F34"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
            <DataGrid.Columns>
                <!-- 상태 (첫 번째 컬럼) -->
                <DataGridTemplateColumn Header="상태" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding StatePillBackground}"
                                   CornerRadius="6"
                                   Padding="10,4"
                                   HorizontalAlignment="Center">
                                <TextBlock Text="{Binding StateDisplayText}"
                                         Foreground="{Binding StatePillForeground}"
                                         HorizontalAlignment="Center"
                                         FontSize="12"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="문서번호" Binding="{Binding DocumentId}" Width="150"/>
                <DataGridTextColumn Header="거래처" Binding="{Binding FromCompanyId}" Width="150"/>
                <DataGridTextColumn Header="총금액" Binding="{Binding TotalAmount, StringFormat=\{0:N0\}원}" Width="120" />
                <DataGridTextColumn Header="거래일" Binding="{Binding TransactionDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                <DataGridTextColumn Header="버전" Binding="{Binding VersionNumber}" Width="60"/>
            </DataGrid.Columns>
                </DataGrid>

                <!-- 하단 버튼 영역 -->
                <Border Grid.Row="2" Background="#ECF0F1" Padding="15" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="신규 거래명세표" Padding="15,8" Margin="0,0,10,0"
                       Background="#27AE60" Foreground="White" BorderThickness="0"
                       FontWeight="Bold" Cursor="Hand"/>
                <Button Content="열기" Padding="15,8" Margin="0,0,10,0"
                       Background="#3498DB" Foreground="White" BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="삭제" Padding="15,8" Margin="0,0,10,0"
                       Background="#E74C3C" Foreground="White" BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="새로고침" Padding="15,8"
                       Background="#95A5A6" Foreground="White" BorderThickness="0"
                       Cursor="Hand"/>
            </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
